@page
@model Refiz.Razor.Areas.Entities.Pages.Index

@{
    Layout = "_Layout";
}

@{
    ViewData["Title"] = "Organizace";
}

<div class="text-center">
    <h1 class="display-4">"Organizace"</h1>
    
    <div class="row">
        
        @if (Model.Data != null)
        {

            <table id="data" class="table table-striped table-hover table-sm" style="width:100%">
                <thead class="table-primary">
                <tr>
                    <th>Nazev</th>
                    <th>Email</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var d in Model.Data.Items)
                {
                    <tr>
                        <td class="text-start">@d.DisplayName</td>
                        <td class="text-start">@d.Email</td>
                    </tr>
                }
                </tbody>
                <tfoot>
                        <nav aria-label="Page navigation example">
                          <ul class="pagination">
                            <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                            <li class="page-item"><a class="page-link" href="?skip=1&limit=@Model.Data.Limit">1</a></li>
                            <li class="page-item"><a class="page-link" href="?skip=2&limit=@Model.Data.Limit">2</a></li>
                            <li class="page-item"><a class="page-link" href="?skip=3&limit=@Model.Data.Limit">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">Next</a></li>
                          </ul>
                        </nav>
                </tfoot>
            </table>
        }
        

    </div>
</div>

