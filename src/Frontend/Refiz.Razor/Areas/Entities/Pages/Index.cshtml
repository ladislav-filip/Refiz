@page
@model Refiz.Razor.Areas.Entities.Pages.Index

@{
    Layout = "_Layout";
}

@{
    ViewData["Title"] = "Organizace";
}

<div class="text-center">
    <h1 class="display-4">"Organizace"</h1>
    
    <div class="row">
        
        @if (Model.Data != null)
        {

            <table id="data" class="display" style="width:100%">
                <thead>
                <tr>
                    <th>Nazev</th>
                    <th>Email</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var d in Model.Data.Items)
                {
                    <tr>
                        <td>@d.DisplayName</td>
                        <td>@d.Email</td>
                    </tr>
                }
                </tbody>
            </table>
        }
    </div>
</div>

@section Scripts {
<script>
    $(document).ready(function () {
        $("#data").DataTable();
    })  
</script>
}